<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          hgap="20" vgap="20"
          alignment="CENTER"
          stylesheets="/styles/chart-styles.css">
    <rowConstraints>
        <RowConstraints percentHeight="85"/>
        <RowConstraints percentHeight="15"/>
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints percentWidth="60"/>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="20"/>
    </columnConstraints>
    <padding>
        <Insets topRightBottomLeft="30"/>
    </padding>
    <LineChart GridPane.rowIndex="0"
               GridPane.columnIndex="0"
               fx:id="lineChart"
               maxWidth="Infinity"
               maxHeight="Infinity"
               title="Scores"
               legendSide="RIGHT">
        <xAxis>
            <NumberAxis fx:id="xAxis"
                        side="BOTTOM"
                        autoRanging="false"
                        tickUnit="1"/>
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="yAxis"
                        label="Score/10"
                        side="LEFT"
                        autoRanging="false"
                        upperBound="10"
                        tickUnit="1"/>
        </yAxis>
    </LineChart>

    <VBox GridPane.rowIndex="1"
          GridPane.columnIndex="0"
          spacing="10"
          alignment="CENTER">
        <HBox alignment="CENTER">
            <Label text="Choose most recent scores to show:"
                   styleClass="h6"
                   maxWidth="Infinity"/>
        </HBox>
        <HBox alignment="CENTER"
              maxWidth="Infinity"
              spacing="10">
            <fx:define>
                <ToggleGroup fx:id="recentN"/>
            </fx:define>
            <RadioButton fx:id="tenButton"
                         text="10"
                         styleClass="h6"
                         toggleGroup="$recentN"/>
            <RadioButton fx:id="twentyFiveButton"
                         text="25"
                         styleClass="h6"
                         toggleGroup="$recentN"/>
            <RadioButton fx:id="fiftyButton"
                         text="50"
                         styleClass="h6"
                         toggleGroup="$recentN"/>
            <RadioButton fx:id="allButton"
                         text="All"
                         styleClass="h6"
                         toggleGroup="$recentN"/>
            <RadioButton fx:id="customButton"
                         styleClass="h6"
                         toggleGroup="$recentN"/>
            <TextField fx:id="customField"
                       styleClass="h6"/>
        </HBox>
    </VBox>

    <VBox GridPane.rowIndex="0"
          GridPane.columnIndex="1"
          styleClass="h5" spacing="5">
        <Label text="Easy"/>
        <ListView GridPane.rowIndex="0"
                  GridPane.columnIndex="1"
                  maxHeight="Infinity"
                  fx:id="easyList"
                  VBox.vgrow="ALWAYS"
                  styleClass="h5"/>
    </VBox>
    <VBox GridPane.rowIndex="0"
          GridPane.columnIndex="2"
          styleClass="h5" spacing="5">
        <Label text="Hard"/>
        <ListView GridPane.rowIndex="0"
                  GridPane.columnIndex="1"
                  maxHeight="Infinity"
                  VBox.vgrow="ALWAYS"
                  fx:id="hardList"
                  styleClass="h5"/>
    </VBox>
</GridPane>
