<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="100">

    <padding>
        <Insets topRightBottomLeft="50"/>
    </padding>

    <Label text="Select from the following"
           styleClass="h3"
           textAlignment="CENTER"/>
    <GridPane alignment="CENTER"
              hgap="20">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" percentWidth="50"/>
            <ColumnConstraints halignment="LEFT" percentWidth="50"/>
        </columnConstraints>
        <Button fx:id="practiceButton"
                GridPane.rowIndex="0"
                GridPane.columnIndex="0"
                text="Practice"
                maxWidth="Infinity"
                styleClass="h3"/>
        <Button fx:id="testButton"
                GridPane.rowIndex="0"
                GridPane.columnIndex="1"
                text="Test"
                maxWidth="Infinity"
                styleClass="h3"/>
    </GridPane>

</VBox>
