<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.*?>
<?import tatai.ui.control.*?>
<?import com.sun.javafx.charts.Legend?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="/styles/pronunciation-styles.css">
    <padding>
        <Insets topRightBottomLeft="20"/>
    </padding>
    <center>
        <StackPane maxWidth="700">
            <VBox fx:id="questionView"
                  alignment="CENTER"
                  spacing="10">
                <Label fx:id="questionLabel"
                       textAlignment="CENTER"
                       wrapText="true"
                       styleClass="h3">
                    <padding>
                        <Insets bottom="35"/>
                    </padding>
                </Label>
                <Label fx:id="checkLabel"
                       textAlignment="CENTER"
                       styleClass="h5"/>
                <GridPane alignment="CENTER" 
                          hgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="33.33"/>
                        <ColumnConstraints percentWidth="33.33"/>
                        <ColumnConstraints percentWidth="33.33"/>
                    </columnConstraints>
                    <IconButton fx:id="recordButton"
                                GridPane.columnIndex="0"
                                glyphName="MICROPHONE"
                                maxWidth="Infinity"/>
                    <IconButton fx:id="playButton"
                                GridPane.columnIndex="1"
                                glyphName="VOLUME_HIGH"
                                maxWidth="Infinity"/>
                    <Button fx:id="checkButton"
                            GridPane.columnIndex="2"
                            text="Check"
                            styleClass="h5"
                            maxHeight="Infinity"
                            maxWidth="Infinity"/>
                </GridPane>
                <ProgressBar fx:id="progressBar"
                             maxWidth="Infinity"/>
                <Button fx:id="submitButton"
                        text="Submit"
                        styleClass="h5"
                        maxWidth="Infinity"/>
            </VBox>
            <VBox fx:id="feedbackView"
                  visible="false"
                  alignment="CENTER"
                  spacing="10">
                <Label fx:id="resultLabel"
                       textAlignment="CENTER"
                       styleClass="h3"/>
                <Label fx:id="feedbackLabel"
                       textAlignment="CENTER"
                       styleClass="h4"
                       wrapText="true"/>
                <Button fx:id="continueButton"
                        styleClass="h5"/>
            </VBox>
            <VBox fx:id="finishView"
                  visible="false"
                  alignment="CENTER"
                  spacing="10">
                <Label fx:id="scoreLabel"
                       textAlignment="CENTER"
                       styleClass="h3"/>
                <Button fx:id="restartButton"
                        text="Restart"
                        styleClass="h5"/>
            </VBox>
        </StackPane>
    </center>
    <bottom>
        <HBox fx:id="progressView"
              styleClass="progress-view"
              alignment="CENTER"
              spacing="20"/>
    </bottom>
</BorderPane>
