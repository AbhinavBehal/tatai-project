<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import tatai.ui.IconButton?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:id="parentPane"
           stylesheets="/commonStyles.css, /navigationStyles.css">
    <GridPane StackPane.alignment="TOP_CENTER">
        <rowConstraints>
            <RowConstraints percentHeight="10"/>
            <RowConstraints percentHeight="90"/>
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints percentWidth="100"/>
        </columnConstraints>

        <HBox GridPane.columnIndex="0"
              GridPane.rowIndex="0"
              styleClass="navBar"
              alignment="CENTER" spacing="10">
            <padding>
                <Insets left="10" right="10"/>
            </padding>
            <MaterialDesignIconView fx:id="backButton"
                                    glyphName="ARROW_LEFT"/>
            <Label fx:id="title"
                   text="T&#257;tai"
                   styleClass="h3"/>
            <Region HBox.hgrow="ALWAYS"/>
            <MaterialDesignIconView fx:id="optionsButton"
                                    glyphName="MENU"
                                    glyphSize="48"/>
        </HBox>

        <StackPane fx:id="content"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="1">
            <Button text="Button" styleClass="h5"/>
        </StackPane>
    </GridPane>

    <GridPane fx:id="optionsBar"
              visible="false"
              StackPane.alignment="TOP_RIGHT"
              styleClass="options-menu"
              minWidth="300"
              maxWidth="300"
              alignment="CENTER">
        <padding>
            <Insets top="10" left="10" right="10" bottom="10"/>
        </padding>
        <rowConstraints>
            <RowConstraints percentHeight="50" />
            <RowConstraints percentHeight="50" />
        </rowConstraints>
        <IconButton fx:id="themes"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="0"
                    text="Themes"
                    styleClass="h5"
                    glyphName="PALETTE"/>
        <IconButton fx:id="stats"
                    GridPane.rowIndex="1"
                    GridPane.columnIndex="0"
                    text="Stats"
                    styleClass="h5"
                    glyphName="POLL"/>
    </GridPane>
</StackPane>
